                        if(maxEsquerda < 1) maxEsquerda = 1
                    }

                    return {maxEsquerda, maxDireita}
                }
            }

            function atualizarTudo() {
                lista.atualizar()
                botoes.atualizar()
            }

            function iniciar() {
                atualizarTudo()
                controles.listeners()
            }
            iniciar();
        }
        paginacaoPacientes();
    </script>
