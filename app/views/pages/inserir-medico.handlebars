                    <form class="needs-validation mx-auto" action="/admin/cadastroMedico" method="post" novalidate>
                        <div class="row ">
                            
                            <!-- Input Nome do Médico -->
                            <div class="col-lg-12 col-sm-12 p-0">
                                <label for="nomeMedico" class="form-label mt-3"> Nome completo:</label>
                                <input type="text" class="form-control" id="nomeMedico"
                                    placeholder="Digite o seu nome completo" name="nome" value="" required>
                                <div class="invalid-feedback">
                                    Campo nome é obrigatório.
                                </div>
                                
                            </div>

                            <div class="d-flex gap-2 p-0">
                                <!-- Select Genero do Médico -->
                            <div class="col-lg-6 col-sm-12 p-0">
                                <label for="genero" class="form-label mt-3">Gênero</label>
                                <select class="form-select" id="genero" name="genero" required>
                                    <option value="">Escolha ...</option>
                                    <option value="Masculino">Masculino</option>
                                    <option value="Feminino">Feminino</option>
                                    <option value="Outros">Outro</option>
                                </select>
                                <div class="invalid-feedback">
                                    Por favor selecione gênero.
                                </div>
                            </div>
    
                            <!-- Input CRM -->
                            <div class="col-lg-6 col-sm-12 p-0">
                                <label for="crm" class="form-label mt-3">CRM:</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text">@</span>
                                    <input type="text" class="form-control" name="crm" id="crm" placeholder="Digite o seu CRM" value=""
                                        required>
                                    <div class="invalid-feedback">
                                        Campo CRM é obrigatório.
                                    </div>
                                </div>
                            </div>
                            </div>
                            
    
                            <!-- Input email do Médico -->
                            <div class="col-lg-12 col-sm-12 mb-3 p-0">
                                <label for="emailMedico" class="form-label mt-3">Email: </label>
                                <input type="email" class="form-control" id="emailMedico" name="email" placeholder="you@example.com" value=""
                                    required>
                                <div class="invalid-feedback">
                                    Campo email é obrigatório.
                                </div>
                            </div>
    
                            <!-- Input endereço do Médico -->
                            <div class="col-lg-12 col-sm-12 mb-3 p-0">
                                <label for="enderecoMedico" class="form-label mt-3">Endereço:</label>
                                <input type="text" class="form-control" id="enderecoMedico" name="enderecoCompleto" placeholder="Digite o seu endereço" value=""
                                    required>
                                <div class="invalid-feedback">
                                    Campo endereço é obrigatório.
                                </div>
                            </div>

                            <div class="d-flex gap-2 p-0">
                                <!-- Input telefone do Médico -->
                            <div class="col-lg-6 col-sm-12 p-0 mb-3">
                                <label for="telefoneMedico" class="form-label mt-3">Telefone:</label>
                                <input type="text" class="form-control" id="telefoneMedico" name="telefone" placeholder="(DD)X XXXX-XXXX" value=""
                                    required>
                                <div class="invalid-feedback">
                                    Campo telefone é obrigatório.
                                </div>
                            </div>
    
                            <!-- Select de Especialidades -->
                            <div class="col-lg-6 col-sm-12 p-0 mb-3">
                                <label for="especialidades" class="form-label mt-3">Especialidades:</label>
                                <select class="form-select" id="especialidades" name="especialidades" required>
                                    <option value="">Escolha ...</option>
                                    {{#each especialidades}}
                                        <option value="{{nome}}">{{nome}}</option>
                                    {{/each}}
                                </select>
                                <div class="invalid-feedback">
                                    Por favor selecione a especialidade.
                                </div>
